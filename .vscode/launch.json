  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug submit.ts",
      "program": "${workspaceFolder}/submit.ts",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "args": [
        "--dry-run"
        // "--debug"
      ]
    },
    {
      "name": "nodemon mock-server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/mock-server.ts",
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "run current javascript",
      "program": "${file}",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node"
    },
    {
      "name": "run current typescript",
      "program": "${file}",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx"
    },
    {
      "name": "run single jest test",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm exec jest --no-watch --testTimeout=60000 test-name"
    }
  ]
}
